generator client {
  // binaryTargets = ["native"],
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Pictures {
  id           Int         @id @default(autoincrement())
  title        String
  link         String
  details      String      @db.LongText
  shoot_date   DateTime?   @default(now())
  categoriesId Int?
  materialsId  Int?
  Category     Categories? @relation(fields: [categoriesId], references: [id])
  Materials    Materials?  @relation(fields: [materialsId], references: [id])
}

model Categories {
  id       Int        @id @default(autoincrement())
  name     String
  pictures Pictures[]
}

model Materials {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  accessories Json?
  pictures    Pictures[]
}
